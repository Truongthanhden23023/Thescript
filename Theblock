-- NovaUI G·ªôp: Auto Beat Hits Normal + TP + Fix Lag + X√≥a Loading
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- X√≥a UI c≈© n·∫øu c√≥
if game.CoreGui:FindFirstChild("NovaUI") then
    game.CoreGui.NovaUI:Destroy()
end

-- GUI ch√≠nh
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "NovaUI"

-- H√†m t·∫°o n√∫t
local function CreateBtn(text,pos,callback)
    local Btn = Instance.new("TextButton", ScreenGui)
    Btn.Size = UDim2.new(0,200,0,50)
    Btn.Position = UDim2.new(0.4,0,pos,0)
    Btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
    Btn.TextColor3 = Color3.fromRGB(255,255,255)
    Btn.Text = text
    Btn.Draggable = true
    Btn.MouseButton1Click:Connect(callback)
    return Btn
end

-- ‚ù§Ô∏è Auto Beat Hits Normal
local autoBeat = false
local function AutoBeatHits()
    while autoBeat do
        task.wait(0.05)
        local pg = LocalPlayer:WaitForChild("PlayerGui")
        for _, gui in pairs(pg:GetDescendants()) do
            if gui:IsA("ImageButton") and string.find(gui.Name:lower(), "heart") then
                pcall(function() gui:Activate() end)
            end
        end
    end
end

-- üåç TP CFrame
local function Teleport()
    local char = LocalPlayer.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        char.HumanoidRootPart.CFrame = CFrame.new(
            189.010727, -11.9921074, 153.321777,
            -1,0,0,0,1,0,0,0,-1
        )
    end
end

-- ‚ö° Fix Lag
local function FixLag()
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("ParticleEmitter") or v:IsA("Trail") then
            v.Enabled = false
        elseif v:IsA("BasePart") and v.Material ~= Enum.Material.SmoothPlastic then
            v.Material = Enum.Material.SmoothPlastic
        elseif v:IsA("Decal") or v:IsA("Texture") then
            v:Destroy()
        end
    end
    if setfpscap then setfpscap(60) end
end

-- üóëÔ∏è X√≥a Loading GUI
local function RemoveLoading()
    local pg = LocalPlayer:WaitForChild("PlayerGui")
    for _, gui in pairs(pg:GetChildren()) do
        if gui:IsA("ScreenGui") and string.find(gui.Name:lower(), "loading") then
            gui:Destroy()
        end
    end
end

-- N√∫t UI
local BtnBeat = CreateBtn("Auto Beat Hits: OFF",0.2,function()
    autoBeat = not autoBeat
    BtnBeat.Text = "Auto Beat Hits: "..(autoBeat and "ON" or "OFF")
    if autoBeat then spawn(AutoBeatHits) end
end)

CreateBtn("TP CFrame",0.3,Teleport)
CreateBtn("Fix Lag",0.4,FixLag)
CreateBtn("X√≥a Loading",0.5,RemoveLoading)
